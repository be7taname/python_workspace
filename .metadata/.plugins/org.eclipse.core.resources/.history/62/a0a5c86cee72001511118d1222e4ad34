class MySqrt(object):
    def solution(self, x):
        """
        :type x: int
        :rtype: int
        """
        if x == 0: return 0
        if x < 4: return 1
        elif x < 9: return 2
        else:
            maxx = x/2
            minx = 1
            while maxx - minx > 1:
                guess = (minx + maxx) / 2
                guess2 = guess * guess
                if guess2 > x:
                    maxx = guess
                elif guess2 < x:
                    minx = guess
                else:
                    return guess
            return minx
        