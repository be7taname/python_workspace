class CountNodes(object):
    def cntLevel(self, root):
        if root.left == None:
            return (0, 0, True)
        else:
            (leftLevel, leftNodes, leftComp) = self.cntLevel(root.left)
            if leftComp == False:
                return (leftLevel+1, leftNodes, False)
            else:
                if root.right == None:
                else:
                    (leftLevel, leftNodes, leftComp) = self.cntLevel(root.left)
        
