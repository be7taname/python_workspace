class MaxArea(object):
    def solution(self, height):
        """
        :type height: List[int]
        :rtype: int
        """
        i = 0
        j = len(height)
        curMaxArea = 0
        while (i < j):
            thisArea = (j - i) * min(height[i], height[j])
            if (thisArea > curMaxArea):
                curMaxArea = thisArea
            if (height[i] < height[j]):
                while (height[i+1] < height[i] and (i+1 < j)):
                    i += 1
