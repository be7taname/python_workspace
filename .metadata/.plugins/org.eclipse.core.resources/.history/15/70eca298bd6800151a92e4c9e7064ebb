class CountDigitOne(object):
    def solution(self, n):
        """
        :type n: int
        :rtype: int
        """
        if n <= 0: return 0
        else:
            allDigits = []
            m = n
            numDigit = 0
            while m != 0:
                allDigits.append(m%10)
                m /= 10
                numDigit += 1
            totCnt = 0
            if allDigits[-1] == 1:
                for i in range(numDigit-1):
                    totCnt += 10**(numDigit-2-i) * 9**i
            else:
                
            bound = 10
            nxtCnt = 1
            while n >= bound:
                totCnt += nxtCnt
                bound *= 10
                nxtCnt *= 10
            bound /= 10