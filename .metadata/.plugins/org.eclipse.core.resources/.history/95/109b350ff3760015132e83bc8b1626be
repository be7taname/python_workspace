class CombinationSum(object):
    def solution(self, candidates, target):
        """
        :type candidates: List[int]
        :type target: int
        :rtype: List[List[int]]
        """
        prev = candidates[0] - 1
        res = []
        for num in candidates:
            if num == prev: continue
            if num > target: return res
            if num == target: 
                res.append([target])
                return res
            thisRes = self.solution(candidates, target - num)
            for ss in thisRes:
                ss.append(num)
            res += thisRes
        return res
    
            