class MinSubArrayLen(object):
    def solution(self, s, nums):
        """
        :type s: int
        :type nums: List[int]
        :rtype: int
        """
        start = -1; end = 0
        suma = nums(end); minlen = len(nums) + 1; curlen = 1
        while start < end and end < len(nums):
            if suma >= s:
                if start == -1: return 1
                if curlen < minlen: minlen = curlen
                suma -= nums(start)
                start += 1
            else:
                suma += nums(end)
                end += 1
            min += 1
                    