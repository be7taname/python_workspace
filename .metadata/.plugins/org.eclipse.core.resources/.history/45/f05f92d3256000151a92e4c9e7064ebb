class NumDecodings(object):
    def solution(self, s):
        """
        :type s: str
        :rtype: int
        """
        if len(s) == 0: return 0
        elif len(s) == 1: 
            if s == '0': return 0
            else: return 1
        elif len(s) == 2:
            if s[0] == '0': return 0
            elif s[1] == '0': return 1
            elif s[0] == '1' or (s[0] == '2' and (s[1] >= 0 and s[1] <= 6)):
                return 2
            else:
                return 1
         else:
            if s[-2] == '0': return self.solution(s[:-1])
            elif s[-1] == '0': return self.solution(s[:-2])
            elif s[-2] == '1' or (s[-2] == '2' and (s[-1] >= 0 and s[-1] <= 6)):
                return self.solution(s[:-2])*2
            else:
                return self.solution(s[:-2])
                        