class LongestPalindrome(object):
    def findPalindromeAtCenter(self, s, c1, c2):
        while c1 >= 0 and c2 < len(s) and s[c1] == s[c2]:
            c1 -= 1
            c2 += 1
        
            
        
    def solution(self, s):
        sLen = len(s)
        if sLen == 1:
            return s
        for i in range(sLen):
        
    def findLongestPalindrome(self, s):
        strLen = len(s)
        if strLen == 1:
            return (s, 1)
        (strA, lenA) = self.findLongestPalindrome(s[1:])
        if strLen - lenA >= 2:
            newLong = True
            for i in range((lenA+2)/2):
                if s[i] != s[lenA+1-i]:
                    newLong = False
                    break
        else:
            newLong = False
        if newLong:
            return (s[:lenA+2], lenA+2)
        else:
            newLong = True
            for i in range((lenA+1)/2):
                if s[i] != s[lenA-i]:
                    newLong = False
                    break
            if newLong:
                return (s[:lenA+1], lenA+1)
            else:
                return (strA, lenA)

    def solutionRecursive(self, s):
        """
        :type s: str
        :rtype: str
        """
        (strA, lenA) = self.findLongestPalindrome(s)
        return strA