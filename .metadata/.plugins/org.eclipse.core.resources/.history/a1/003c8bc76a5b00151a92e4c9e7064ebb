class fractionToDecimal(object):
    def solution(self, numerator, denominator):
        """
        :type numerator: int
        :type denominator: int
        :rtype: str
        """
        intPart = numerator / denominator
        remainder = numerator - denominator * intPart
        if remainder == 0: return str(intPart)
        remVisited = [0] * len(denominator)
        remVisited[remainder] = 1
        fracPart = 0
        rep = 0
        while remainder != 0:
            newFrac = remainder * 10 / denominator
            remainder = remainder * 10 - newFrac * denominator
            if remVisited[remainder] == 0: remVisited[remainder] = 1
            else:
                rep = 1
                break 
            fracPart = fracPart * 10 + newFrac
        if rep == 0:
            return '{}.{}'.format()
            
            
            
            