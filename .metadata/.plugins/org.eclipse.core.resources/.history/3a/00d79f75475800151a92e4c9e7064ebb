class MaxSubArray(object):
    def solutions(self, nums):
        """
        :type nums: List[int]
        :rtype: int
        """
        numsLen = len(nums)
        if numsLen == 1: return nums[0]
        else:
            max = nums[0]
            if max < 0:
                for i in range(1, numsLen):
                    if nums[i] <= 0:
                        if nums[i] > max:
                            max = nums[i]
                    else:
                        findPos = 1
        for i in range(len(nums)):
            a += nums[i]
            cumsum.append(a)
        cumsum = []
        a = 0
        for i in range(len(nums)):
            a += nums[i]
            cumsum.append(a)
        minidx = cumsum.index(min(cumsum))
        maxidx = cumsum.index(max(cumsum))
        if minidx == maxidx: return nums[minidx]
        return sum(nums[minidx+1:maxidx+1])
    