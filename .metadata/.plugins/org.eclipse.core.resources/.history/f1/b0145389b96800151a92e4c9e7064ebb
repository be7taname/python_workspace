class CountDigitOne(object):
    def solution(self, n):
        """
        :type n: int
        :rtype: int
        """
        if n <= 0: return 0
        else:
            allDigits = []
            m = n
            numDigit = 0
            while m != 0:
                alldigits.append(m%10)
                m /= 10
                numDigit += 1
            totCnt = 0
            bound = 10
            nxtCnt = 1
            while n >= bound:
                totCnt += nxtCnt
                bound *= 10
                nxtCnt *= 10
            bound /= 10