from common.ListNode import ListNode

class AddTwoNumbers(object):
    def solution(self, l1, l2):
        """
        :type l1: ListNode
        :type l2: ListNode
        :rtype: ListNode
        """
        head = ListNode(0)
        curp = head
        c3 = 0
        while l1 and l2:
            cursum = c3 + l1.val + l2.val
            if cursum >= 10:
                c3 = 1
                cursum -= 10
            curp.next = ListNode(cursum)
            curp = curp.next
            l1 = l1.next
            l2 = l2.next
        