class LongestPalindrome(object):
    def findLongestPalindrome(self, s):
        strLen = len(s)
        if strLen == 1:
            return (s, 1)
        (strA, lenA) = self.findLongestPalindrome(s[1:])
        newLong = True
        for i in range((lenA+1)/2):
            if s[i] != s[lenA-i]:
                newLong = False
                break
        if newLong:
            return (s[:lenA+1], lenA+1)

    def solution(self, s):
