class LongestPalindrome(object):
    def findLongestPalindrome(self, s):
        strLen = len(s)
        if strLen == 1:
            return (s, 1)
        (strA, lenA) = self.findLongestPalindrome(s[1:])
        if strLen - lenA >= 2:
            newLong = True
            for i in range((lenA+2)/2):
                if s[i] != s[lenA+1-i]:
                    newLong = False
                    break
        else:
            newLong = False
        if newLong:
            return (s[:lenA+2], lenA+2)
        else:
            if strA == 1 and s[0] == s[1]:
                return (s[:2], 2)
            else:
                return (strA, lenA)

    def solution(self, s):
        """
        :type s: str
        :rtype: str
        """
        (strA, lenA) = self.findLongestPalindrome(s)
        return strA