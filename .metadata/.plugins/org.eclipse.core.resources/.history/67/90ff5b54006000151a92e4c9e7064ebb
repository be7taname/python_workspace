class Divide(object):
    def solution(self, dividend, divisor):
        """
        :type dividend: int
        :type divisor: int
        :rtype: int
        """
        pos = 1
        if divisor == 0: return 2147483647
        if dividend < 0:
            if dividend == -2147483648:
                dividend = 2147483647
            else:
                dividend = -dividend
            pos ^= 1
        if divisor < 0:
            if divisor == -2147483648:
                divisor = 2147483647
            else:
                divisor = -divisor
            pos ^= 1
        res = 0
        while dividend >= divisor:
            curDiv = divisor << 1
            numShift = 1
            while dividend >= curDiv:
                numShift += 1
                curDiv <<= 1
            numShift -= 1
            res += (1 << numShift)
            dividend -= (divisor << numShift)
        return (res if pos == 1 else -res)
    